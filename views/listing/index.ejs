<% layout ("/layouts/boilerplate") -%>
<body>
    <h3>All listings</h3>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of alllistings) { %>
        <a href="/listings/<%= listing._id %>" style="text-decoration: none;">
            <div class="card col"  >   
                <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height:20rem; "/>
                <div class="card-body">
                    <p class="card-text" ><b><%= listing.title %></b>
                        <br>
                        &#8377;<%=listing.price%>/night
                    </p>
                </div>
            </div>
        </a>
        <!-- Listing Card -->
        
      
    <% } %>
</div>
   
    

</body>
